<Window x:Class="BaiTap1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTap1"
        mc:Ignorable="d"
        Title="SE181799-Lê Nguyễn An Ninh-Tổng 2 Số"
        Height="418" Width="518">

    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">
            Hệ số  _a: 
        </Label>
        <TextBox Name="txtA"></TextBox>
        <Label Target="{Binding ElementName=txtB}">
                Hệ số _b:
        </Label>
        <TextBox Name="txtB"></TextBox>
        <TextBlock>
            Kết quả:
        </TextBlock>
        <TextBlock Name="tbKetQua" Background="Yellow">
        </TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10" Click="btnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/216751_sum_icon.png"/>
                    <TextBlock Margin="5,0">
                        Tổng
                    </TextBlock>
                </StackPanel>
            </Button>
            <Button Name="btnThoat" Width="100" Margin="10" Click="btnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/9104334_sign out_logout_exit_out_icon.png"/>
                    <TextBlock Margin="5,0">Thoát</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
