<Window x:Class="BaiTap3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTap3"
        mc:Ignorable="d"
        Title="SE181799-Lê Nguyễn An Ninh - RadioButtonControl" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <StackPanel>
        <GroupBox Header="Bạn thấy hệ thống như thế nào ?">
            <StackPanel>
                <RadioButton GroupName="hethong" Name="radRatTot">
                    Rất Tốt
                </RadioButton>
                <RadioButton GroupName="hethong" Name="radTot">
                    Tốt
                </RadioButton>
                <RadioButton GroupName="hethong" Name="radTamDuoc">
                    Tạm Được
                </RadioButton>
                <RadioButton GroupName="hethong" Name="radKhongTot">
                    Không Tốt
                </RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Giới tính bạn là gì">
            <StackPanel>
                <RadioButton GroupName="gioitinh" Name="radNam">
                    Nam
                </RadioButton>
                <RadioButton GroupName="gioitinh" Name="radNu">
                    Nữ
                </RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Chọn tác vụ">
            <StackPanel Orientation="Horizontal">
                <Button Content="Gửi phản hồi" Name="btnGui" Width="100" Margin="10,0" Click="btnGui_Click">
                </Button>
                <Button Content="Huỷ" Name="btnHuy" Width="100" Click="btnHuy_Click">
                </Button>
            </StackPanel>
        </GroupBox>
            
    </StackPanel>
</Window>
