<Window x:Class="MyStoreWpfApp_EntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EntityFramework"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="382" Width="866">
    <Grid>
        <Label Content="Đăng nhập hệ thông" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Height="31" Width="125">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Yellow" Offset="0.0"/>
                    <GradientStop Color="Red" Offset="0.5"/>
                    <GradientStop Color="Blue" Offset="1.0"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email" HorizontalAlignment="Left" Margin="40,117,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="123,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="653" FontSize="20" SelectionOpacity="-1" Text="admin@CompanyName.com"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="15,203,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="117,207,0,0" VerticalAlignment="Top" Width="659" FontSize="20" Password="@1"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="237,309,0,0" VerticalAlignment="Top" FontSize="20" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="433,309,0,0" VerticalAlignment="Top" FontSize="20" Width="146"/>

    </Grid>
</Window>
