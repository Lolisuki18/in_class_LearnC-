<Window x:Class="WpfAPP_EF.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAPP_EF"
        mc:Ignorable="d"
        Title="Lê Nguyễn An Ninh -ResetPassword" Height="450" Width="800">
    <Grid>
        <Label Content="Đổi mật khẩu" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="20" Width="198"/>
        <Label Content="Email address" HorizontalAlignment="Left" Margin="25,97,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="200,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="532" FontSize="20" Text="" />
        <Label Content="Old Password" HorizontalAlignment="Left" Margin="29,153,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.513,0.156"/>
        <PasswordBox x:Name="txtOldPassword" HorizontalAlignment="Left" Margin="200,161,0,0" VerticalAlignment="Top" Width="532" FontSize="20"/>
        <Button x:Name="btnReset" Content="Đặt lại mật khẩu" HorizontalAlignment="Left" Margin="238,332,0,0" VerticalAlignment="Top" FontSize="20" Click="btnReset_Click" />
        <Button x:Name="txtThoat" Content="Thoát" HorizontalAlignment="Left" Margin="446,332,0,0" VerticalAlignment="Top" FontSize="20" Width="106" Click="txtThoat_Click" />
        <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="14,255,0,0" VerticalAlignment="Top" FontSize="20" Width="167"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="21,209,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtNewPassword" HorizontalAlignment="Left" Margin="200,217,0,0" VerticalAlignment="Top" Width="532" FontSize="20"/>
        <PasswordBox x:Name="txtConfirmPassword" HorizontalAlignment="Left" Margin="200,263,0,0" VerticalAlignment="Top" Width="532" FontSize="20"/>

    </Grid>
</Window>
