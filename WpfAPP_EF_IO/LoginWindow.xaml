<Window x:Class="WpfAPP_EF_IO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAPP_EF_IO"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Đăng nhập" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.394" FontSize="20"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="36,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.394" FontSize="20"/>
        <Label Content="Mật khẩu" HorizontalAlignment="Left" Margin="36,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.394" FontSize="20"/>
        <CheckBox x:Name="chkSaveLogin" Content="Lưu mật khẩu đăng nhập" HorizontalAlignment="Left" Margin="65,257,0,0" VerticalAlignment="Top" Height="40" Width="354" FontSize="20"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Center" Margin="0,101,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="532" FontSize="20"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,188,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="532" FontSize="20"/>
        <Button x:Name="btnLogin" Content="Đăng nhập" HorizontalAlignment="Left" Margin="191,334,0,0" VerticalAlignment="Top" FontSize="20" Click="btnLogin_Click"/>
        <Button Content="Đăng nhập" HorizontalAlignment="Left" Margin="472,334,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
