<Window x:Class="WpfAPP_EF_IO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAPP_EF_IO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Name="mnuHeThong" Header="Hệ thống">
                <MenuItem Name="mnuHeThongDoiMatKhau" Header="Đổi mật khẩu"></MenuItem>
                <MenuItem Name="mnuHeThongXemTaiKhoan" Header="Xem thông tin tài khoản"></MenuItem>
                <Separator/>
                <MenuItem Name="mnuHeThongThoat" Header="Thoát phần mềm"></MenuItem>
            </MenuItem>
            
            <MenuItem Name="mnuQuanLy" Header="Quản lý">
                <MenuItem Name="mnuQuanLyTaiKhoan" Header="Quản lý tài khoản"></MenuItem>
                <MenuItem Name="mnuQuanLyDanhMuc" Header="Quản lý danh mục"></MenuItem>
            <Separator/>
                <MenuItem Name="mnuQuanLySanPham" Header="Quản lý Sản phẩm"></MenuItem>
            </MenuItem>

            <MenuItem Name="mnuBaoCao" Header="Báo cáo">
                <MenuItem Name="mnuBaoCaoDoanhThu" Header="Báo Coá Doanh Thu"></MenuItem>
                <MenuItem Name="mnuBaoCaoTonKho" Header="Báo cáo tồn kho"></MenuItem>
            </MenuItem>

            <MenuItem Name="mnuTroGiup" Header="Trợ Giúp">
                <MenuItem Name="mnuTroGiupHuongDanSuDung" Header="Hướng dẫn sử dụng"></MenuItem>
                <Separator/>
                <MenuItem Name="mnuTroGiupGioiThieu" Header="Giới thiệu phần mềm"></MenuItem>
            </MenuItem>
        </Menu>
        <WrapPanel DockPanel.Dock="Top" Height="50" Background="Yellow">
            
        </WrapPanel>

        <WrapPanel DockPanel.Dock="Bottom" Height="50" Background="Magenta">
            <Label Name="nameLogin" FontSize="20"></Label>
        </WrapPanel>

        <WrapPanel>
            
        </WrapPanel>
    </DockPanel>
</Window>
